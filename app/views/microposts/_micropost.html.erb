<li class="media mb-4">
    <div class="mr-2">
        <%= link_to gravatar_for(micropost.user), user_url(micropost.user) %>
    </div>

    <div class="media-body">
        <h5><%= link_to micropost.user.name, micropost.user %></h5>
        <div><%= micropost.content %></div>

        <small class="text-muted">Posted <%= time_ago_in_words(micropost.created_at) %> ago</small>
    </div>

    <% if micropost.user == current_user %>
        <%= link_to micropost_url(micropost), method: :delete,
                    data: { confirm: "Are you sure?" },
                    class: "float-right" do %>
            <i class="fa fa-times text-muted"></i>    
        <% end %>
        <%# link の中にものがあるから do と end が必要 %>
    <% end %>
</li>